.login-background-image
.row.vertical-offset.panel-animate
  .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
    .panel.panel-default
      .panel-body
        - if @user.present? and @user.errors.any?
          - @user.errors.full_messages.each do |msg|
            %p= msg
        = form_tag "/casting", method: "post" do
          = label_tag :'キャスティングを始めよう'
          = text_field_tag :name, '', class: 'form-control', placeholder: 'ニックネーム'
          .form-group
            = label_tag :gender, 'Gender', class: 'label-gender'
            %label.radio
              %input{:type => 'radio', :name => 'gender', :value => 'male', :checked => true} male
            %label{:class => 'radio'}
              %input{:type => 'radio', :name => 'gender', :value => 'female', :checked => false} female
            %br
            = submit_tag :"CAST NOW", class: 'btn btn-lg btn-success btn-block'
:javascript
    $(function(){
      $('.panel-animate').animate({
        'opacity' : '1.0', 'padding-top' : '100px'
      },1000);
    });
