%div{:id  => 'video_change_button', :class => 'form-group'}
  = label_tag :video_change, '映像ON/OFF', class: 'label-video-change'
  %input{:type => 'radio', :name => 'video_change', :id => "on", :value => "1", :checked => true}
  %label{:for => 'on', :class => 'switch-on'} ON
  %input{:type => 'radio', :name => 'video_change', :id => "off", :value => "0", :checked => false}
  %label{:for => 'off', :class => 'switch-off'} OFF

%div{:id  => 'audio_change_button', :class => 'form-group'}
  = label_tag :audio_change, '音声ON/OFF', class: 'label-audio-change'
  %input{:type => 'radio', :name => 'audio_change', :id => "on", :value => "1", :checked => true}
  %label{:for => 'on', :class => 'switch-on'} ON
  %input{:type => 'radio', :name => 'audio_change', :id => "off", :value => "0", :checked => false}
  %label{:for => 'off', :class => 'switch-off'} OFF

#exit_button
  %button{:type => "submit", :onclick => "exit_video_chat()"} Exit
